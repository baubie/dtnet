rSP8 = constrain(rSP, "trial.main.duration", 8)
graphtrial_voltage(rSP8, 0, "sp_8ms.eps")

set("graph.width", 8)
set("graph.height", 13)

rLP2 = constrain(rLP, "trial.main.duration", 2)
